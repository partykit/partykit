---
import NavLink from './NavLink.astro';
const { title, text, variant = 1 } = Astro.props;
---

{variant === 1 && 
  <dl class='flex flex-column-reverse'>
    <dt class='gray-4 f2'>{title}</dt>
    <dd class='m0 f5 f6-s f7-m fw7'>{text}</dd>
  </dl>
}

{variant === 2 && 
  <dl>
    <dt class='gray-4'>{title}</dt>
    <dd class='m0 f7 fw7'>{text}</dd>
  </dl>
}
