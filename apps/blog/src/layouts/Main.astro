---
import Breadcrumbs from "@components/Breadcrumbs.astro";

export interface Props {
  pageTitle: string;
  pageDesc?: string;
}

const { pageTitle, pageDesc } = Astro.props;
---

<Breadcrumbs />
<main id="main-content">
  <h1>{pageTitle}</h1>
  <p>{pageDesc}</p>
  <slot />
</main>

<style>
  
  #main-content {
    margin: calc(var(--whitespace) - 50px) 0 calc(var(--whitespace) * 0.5);
  }
  @media (min-width: 1100px) {
    #main-content {
      width: calc(80% - 3rem);
      margin-left: auto;
      margin-right: auto;
    }
  }
  
  #main-content > h1 {
    display: none;
  }
  
  #main-content > h1 + p {
    text-align: center;
    padding: 0 3rem;
  }

</style>
