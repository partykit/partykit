<style>
  footer {
    z-index: 3;
    padding: var(--padding);
    gap: 1rem;
    padding-top: calc(var(--whitespace) * 0.5);
    padding-bottom: 2rem;
    background: var(--color-feature-2);
    color: var(--color-page);
  }

  #footer-inner {
    width: 100%;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    padding: 0;
  }

  @media (min-width: 760px) {
    #footer-inner {
      grid-template-columns: repeat(10, 1fr);
    }
  }

  @media (min-width: 760px) and (max-width: 1100px) {
    #footer-inner {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  footer h2 {
    margin-top: 0;
    margin-bottom: 0;
    grid-column: 1 / -1;
    text-align: center;
    font-variation-settings: "wght" 240;
    font-feature-settings: "calt" 01, "dlig" 00, "case" 01, "ss01" 01, "ss02" 01,
      "ss07" 01, "ss08" 01, "cv10" 01, "cv13" 00;
    font-size: 7.25vw;
    line-height: 1.2;
    letter-spacing: 0;
  }
  footer h2 strong {
    font-variation-settings: "wght" 600;
    letter-spacing: -0.0125em;
    font-weight: inherit;
  }

  @media (min-width: 760px) {
    footer h2 {
      max-width: 100%;
      font-variation-settings: "wght" 210;
      font-feature-settings: "calt" 01, "dlig" 00, "case" 01, "ss01" 01,
        "ss02" 01, "ss07" 01, "ss08" 01, "cv10" 01, "cv13" 00;
      font-size: 70px;
      line-height: 1.05;
      letter-spacing: 0;
    }
    footer h2 strong {
      font-variation-settings: "wght" 640;
      letter-spacing: -0.025em;
    }
  }

  .copy {
    grid-column: 1 / -1;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    text-align: center;
    margin: calc(var(--whitespace) * 0.5) auto;
  }
  .copy p {
    max-width: 28em;
    margin: 0 auto;
  }
  .copy a {
    text-decoration: underline;
  }
  .copy a:hover,
  .copy a:focus {
    color: var(--color-text);
  }
  @media (min-width: 760px) {
    .copy {
      grid-column: 1 / -1;
      max-width: 16em;
      font-variation-settings: "wght" 230;
      font-feature-settings: "calt" 01, "dlig" 00, "case" 01, "ss01" 01,
        "ss02" 01, "ss07" 01, "ss08" 01, "cv10" 01, "cv13" 00;
      font-size: 32px;
      line-height: 1.2;
      letter-spacing: 0.025em;
    }
  }

  @media (min-width: 1100px) {
    .copy {
      grid-column: 1 / -1;
      padding-bottom: 2rem;
      max-width: 40em;
    }
  }

  .get-started {
    grid-column: 1 / 4;
    display: flex;
    flex-direction: row;
    align-items: stretch;
    justify-content: center;
    gap: 1rem;
    margin: 2rem -0.5rem;
    max-width: calc(100% + 1rem);
  }
  @media (min-width: 760px) {
    .get-started {
      margin: 4rem 0;
      max-width: 100%;
      grid-column: 1 / -1;
      grid-row: 3 / 4;
      justify-content: center;
    }
  }
  @media (min-width: 1100px) {
    .get-started {
      grid-column: 2 / 6;
      grid-row: 3 / 4;
      margin: 0;
    }
  }

  .get-started a {
    display: inline-block;
    padding: var(--box-padding);
    width: 100%;
    border: none;
    border-radius: 2em;
    text-align: center;
    text-decoration: none;
    background: var(--color-page);
    color: var(--color-feature-2);
    font-variation-settings: "wght" 350;
    cursor: pointer;
    flex-grow: 2;
  }

  .get-started a:after {
    content: "â†’";
    position: relative;
    left: 0;
    margin-left: var(--character-width);
    transition: 0.3s ease 0.3s;
  }

  .get-started a:hover,
  .get-started a:focus {
    color: var(--color-feature-2);
  }

  .get-started a:hover:after,
  .get-started a:focus:after {
    left: 0.25em;
  }

  @media (max-width: 759px) {
    .get-started a {
      font-size: 95%;
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }
  @media (min-width: 760px) {
    .get-started a {
      max-width: var(--atom-width);
    }
  }

  #smallprint {
    grid-column: 1 / -1;
    display: flex;
    flex-direction: column;
    align-items: stretch;
    gap: 2rem;
  }
  #smallprint a {
    text-decoration: underline;
  }
  #smallprint a:hover,
  #smallprint a:focus {
    color: var(--color-text);
  }

  @media (min-width: 760px) {
    #smallprint {
      grid-row: 4 / 5;
      flex-direction: row-reverse;
      justify-content: space-between;
    }
  }

  @media (min-width: 1100px) {
    #smallprint {
      grid-column: 6 / 10;
      grid-row: 3 / 4;
      justify-content: space-evenly;
      gap: 1rem;
    }
  }

  .icons {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-self: center;
    gap: 1rem;
  }

  .icon {
    color: var(--color-page);
  }

  .icon * {
    color: inherit;
  }

  .legal {
    align-self: center;
    text-align: center;
  }
</style>
