---
import BlogPost from "../cards/BlogPost.astro";
import Button from "../atoms/Button.astro";
import Grid from "../Grid.astro";
import blogposts from "../../blog.json";
---

<Grid>
  <h2 id="blog-header">Blog</h2>

  <div id="blog-posts">
    <div id="blog-posts-list">
      {
        blogposts.map((post) => (
          <BlogPost
            title={post.title}
            url={post.link}
            date={new Date(post.pubDate).toDateString()}
          >
            <p>{post.description}</p>
          </BlogPost>
        ))
      }
    </div>
  </div>
  
  <div id="blog-link">
    <Button url="https://blog.partykit.io/">
      More blog posts
    </Button>
  </div>
  
</Grid>

<style lang="scss">
  @import "../../styles/shared.scss";

  #blog-header {
    grid-column: 1 / -1;
    @include atom();
  }

  @media (min-width: 760px) {
    #blog-header {
      max-width: 100%;
    }
  }

  @media (min-width: 1100px) {
    #blog-header {
      grid-column: 2 / 10;
    }
  }

  #blog-posts {
    grid-column: 1 / 3;
  }

  @media (min-width: 760px) {
    #blog-posts {
      grid-column: 1 / 11;
    }
  }
  
  #blog-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding-top: 4rem;
    grid-column: 1 / -1;
    @include atom();
    @media (min-width: 1100px) {
      grid-column: 4 / 9;
      justify-content: flex-start;
      margin-left: inherit;
      margin-right: inherit;
    }
  }
</style>
