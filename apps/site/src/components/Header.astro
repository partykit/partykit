<script>
  const navButton = document.getElementById(
    "nav-button",
  ) as HTMLInputElement | null;

  const onNavChange = () => {
    if (!navButton) return;
    if (navButton.checked) {
      document.body.classList.add("nav-open");
    } else {
      document.body.classList.remove("nav-open");
    }
  };

  if (navButton) {
    navButton.addEventListener("change", onNavChange);
  }

  const dismiss = () => {
    if (!navButton) return;
    navButton.checked = false;
  };

  const dismissNav = document.querySelectorAll("[data-dismiss-nav]");
  [...dismissNav].forEach((el) => {
    el.addEventListener("click", dismiss);
  });

  var navLinks = document.getElementsByClassName("nav-page-item");

  [...navLinks].forEach((navLink) => {
    // @ts-expect-error it works, I promise
    navLink.onclick = function () {
      document.body.classList.remove("nav-open");
    };
  });
</script>

<style lang="scss">
  @import "../styles/shared.scss";

  header {
    position: sticky;
    top: 0;
    left: 0;
    width: 100%;
    height: 0;
    z-index: 1000;
    padding: var(--padding);
    background: var(--color-page);
  }

  nav {
    gap: 1rem;
    position: relative;
    display: flex;
    flex-direction: row-reverse;
    justify-content: space-between;
    align-items: center;
    height: 50px;
    padding: 0 1rem;
    margin: 0 -2rem;
    background: var(--color-page);
    box-shadow: 0 10px 50px rgba(0, 0, 0, 0.1);
  }

  @media (min-width: 760px) {
    nav {
      flex-direction: row;
      padding: 0 2rem;
      height: 50px;
      background: rgba(255, 255, 255, 0.85);
      backdrop-filter: blur(8px);
    }
  }

  @media (min-width: 1100px) {
    nav {
      padding: 0 calc(10% + 2rem);
    }
  }

  h1 {
    position: relative;
    height: 32px;
    width: 70px;
    background-image: url(/assets/PK_Logo_Full.png);
    background-size: contain;
    background-repeat: no-repeat;
    background-position: left center;
    text-indent: -5000%;
    top: 1px;
  }

  @media (min-width: 760px) {
    h1 {
      height: 36px;
    }
  }

  h1 a {
    position: absolute;
    top: -5px;
    left: -5px;
    right: 25px;
    bottom: -5px;
  }

  #nav-button {
    cursor: pointer;
    display: block;
    position: relative;
    height: 12px;
    width: 20px;
    overflow: hidden;
    border-top: 2px solid;
    border-bottom: 2px solid;
    border-radius: 0;
    appearance: none;
    margin-right: 0.5rem;
  }

  #nav-button:before {
    content: " ";
    position: absolute;
    display: block;
    width: 100%;
    top: calc(50% - 1px);
    left: 0;
    border-top: 2px solid;
  }

  #nav-button:checked {
    right: 2px;
    height: 16px;
    width: 16px;
    border: none;
  }

  #nav-button:checked:before {
    width: 150%;
    left: -25%;
    transform: rotate(-45deg);
    transform-origin: center;
  }

  #nav-button:checked:after {
    content: " ";
    position: absolute;
    display: block;
    top: calc(50% - 1px);
    border-top: 2px solid;
    width: 150%;
    left: -25%;
    transform: rotate(45deg);
    transform-origin: center;
  }

  @media (min-width: 760px) {
    #nav-button {
      display: none;
    }
  }

  #nav-button:checked ~ #nav-panel {
    display: flex;
  }

  #nav-panel {
    display: none;
    position: absolute;
    top: 100%;
    left: -2rem;
    right: -2rem;
    height: calc(100vh - 50px);
    padding: var(--padding);
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(8px);
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
  }

  @media (min-width: 760px) {
    #nav-panel {
      position: relative;
      display: flex;
      top: auto;
      left: 0;
      right: 0;
      height: 100%;
      padding: 0;
      background: transparent;
      backdrop-filter: none;
      flex-direction: row;
      gap: 2rem;
    }
  }

  #nav-pages {
    display: flex;
    flex-direction: column;
    gap: 1em;
    @include font-hero();
    a {
      &:hover span,
      &:focus span {
        color: var(--color-feature-2);
      }
    }
  }

  @media (min-width: 760px) {
    #nav-pages {
      flex-direction: row;
      font-size: inherit;
      font-variation-settings: inherit;
      line-height: inherit;
      letter-spacing: inherit;
      gap: 1.5rem;
      @include font-core();
    }
  }

  #nav-icons {
    display: flex;
    flex-direction: row;
    gap: 3em;
  }

  @media (min-width: 760px) {
    #nav-icons {
      gap: 1rem;
    }
  }

  #nav-icons svg {
    width: 50px;
    height: 50px;
  }

  @media (min-width: 760px) {
    #nav-icons svg {
      width: inherit;
      height: inherit;
    }
  }

  #nav-panel a:before {
    padding-right: calc(var(--character-width) * 0.5);
  }

  #nav-panel a.icon {
    padding-right: 0;
  }

  #nav-panel a.icon:before {
    content: none;
  }
</style>
