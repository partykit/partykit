---
import BlogPost from "../cards/BlogPost.astro";
import Button from "../atoms/Button.astro";
import Grid from "../Grid.astro";
import SectionNav from "../SectionNav.astro";
import blogposts from "../../blog.json";
---

<Grid>
  <h2 id="blog-header">Blog posts</h2>

  <div id="blog-posts">
    <div id="blog-posts-list">
      {
        blogposts.map((post) => (
          <BlogPost
            title={post.title}
            url={post.link}
            date={new Date(post.pubDate).toDateString()}
          >
            <p>{post.description}</p>
          </BlogPost>
        ))
      }
    </div>
  </div>
</Grid>

<style lang="scss">
  @import "../../styles/shared.scss";

  #blog-header {
    grid-column: 1 / -1;
    @include atom();
  }

  @media (min-width: 760px) {
    #blog-header {
      max-width: 100%;
    }
  }

  @media (min-width: 1100px) {
    #blog-header {
      grid-column: 2 / 10;
    }
  }

  #blog-posts {
    grid-column: 1 / 3;
  }

  @media (min-width: 760px) {
    #blog-posts {
      grid-column: 1 / 11;
    }
  }
</style>
