<style>
  #blog-header {
    grid-column: 1 / -1;
    width: 100%;
    max-width: var(--atom-width);
    margin-left: auto;
    margin-right: auto;
  }

  @media (min-width: 760px) {
    #blog-header {
      max-width: 100%;
    }
  }

  @media (min-width: 1100px) {
    #blog-header {
      grid-column: 2 / 10;
    }
  }

  #blog-posts {
    grid-column: 1 / 3;
  }

  @media (min-width: 760px) {
    #blog-posts {
      grid-column: 1 / 11;
    }
  }
</style>
