---
import "../../styles/variables.scss";

interface Props {
  name: string;
  url: string;
  role: string;
  img: string;
  variant: "S" | "M" | "L";
}

const { name, url, role, variant, img } = Astro.props;
---

<div class={`quote quote-${variant}`}>
  <blockquote>
    <slot />
  </blockquote>
  <cite>
    <div class="avatar"><img src={img} /></div>
    <div class="author">
      <a href={url}>{name}</a>
      <span>{role}</span>
    </div>
  </cite>
</div>

<style lang="scss">
  @import "../../styles/shared.scss";

  .quote {
    grid-column: span 2;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    padding-bottom: 1rem;
  }

  @media (min-width: 760px) {
    .quote {
      grid-column: span 1;
    }
  }
  @media (min-width: 760px) and (max-width: 1100px) {
    .quote:nth-child(6) ~ .quote {
      display: none;
    }
  }
  
  @media (min-width: 1100px) {
    .quote {
      padding-bottom: 0;
      padding-left: 2rem;
      padding-right: 2rem;
      grid-column-end: span 2;
      align-self: start;
      &.quote-M {
        grid-column-end: span 3;
      }
      &.quote-L {
        grid-column-end: span 5;
      }
      &:nth-child(1) {
        grid-column-start: 1;
        grid-row: 3 / 5;
      }
      &:nth-child(2) {
        grid-column-start: 4;
        grid-row: 1 / 2;
      }
      &:nth-child(3) {
        grid-column-start: 6;
        grid-row: 2 / 3;
      }
      &:nth-child(4) {
        grid-column-start: 9;
        grid-row: 4 / 5;
      }
      &:nth-child(5) {
        grid-column-start: 1;
        grid-row: 7 / 8;
      }
      &:nth-child(6) {
        grid-column-start: 4;
        grid-row: 6 / 7;
      }
      &:nth-child(7) {
        grid-column-start: 9;
        grid-row: 7 / 8;
      }
    }
  }

  .quote blockquote {
    position: relative;
    padding: var(--box-padding);
    padding-bottom: 2rem;
    background: var(--color-feature-1);
    border-radius: var(--box-radius);
    flex-grow: 2;
  }

  blockquote:before {
    position: absolute;
    display: block;
    width: 0;
    height: 0;
    content: " ";
    top: 100%;
    right: calc(100% - 1.75rem);
    border-style: solid;
    border-width: 0.5rem 0.5rem 0.5rem 0;
    border-color: transparent var(--color-feature-1) transparent transparent;
    transform: rotate(45deg);
    transform-origin: top right;
  }

  cite {
    @include font-S();
    display: flex;
    flex-direction: row;
    justify-content: start;
    align-items: center;
    padding: 1rem 1rem 0 0;
    gap: 0 1rem;
  }

  .avatar {
    display: block;
    width: 2.25rem;
    height: 2.25rem;
    border-radius: 100%;
    background-image: url(/assets/user.jpg);
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    overflow: hidden;
    img {
      min-width: 100%;
      min-height: 100%;
      object-fit: cover;
    }
  }
  
  .author {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: start;
    flex-wrap: wrap;
    gap: 0 var(--character-width);
    a {
      &:hover {
        text-decoration: underline;
      }
      &:focus {
        text-decoration: underline;
        color: var(--color-feature-2);
      }
    }
  }
</style>
