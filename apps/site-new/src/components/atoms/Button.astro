---
import "../../styles/variables.css";

interface Props {
  url: string;
  variant?: null | "outline" | "github" | "pricingCTA";
}

const { url, variant = null } = Astro.props;
---

<a class={variant} href={url}><slot /></a>

<style>
  a {
    padding: var(--box-padding);
    border: none;
    border-radius: 2em;
    text-align: center;
    background: var(--color-feature-2);
    color: var(--color-page);
    font-variation-settings: "wght" 400;
    max-width: var(--atom-width);
    cursor: pointer;
    flex-grow: 2;
  }

  a:after {
    content: "â†’";
    margin-left: var(--character-width);
  }

  a.outline {
    background: transparent;
    color: inherit;
    border: 1.5px solid;
    font-variation-settings: "wght" 550;
    color: var(--color-feature-2);
    outline-style: none;
  }

  a.github {
    padding-top: 0.4em;
    padding-bottom: 0.4em;
    border-width: 1px;
    color: var(--color-feature-2);
    border-color: rgba(160, 160, 160, 0.1);
    background: rgba(160, 160, 160, 0.2);
  }
  
  a.pricingCTA {
    flex-grow: 0;
    margin-top: 2rem;
  }
</style>
