---
import "../../styles/variables.scss";
import Voronoi from "../../interactive/Voronoi";
---

<div id="hero">
  <h1>
    Turn everything into a <br /><strong>realtime multiplayer app</strong>
  </h1>
  <div id="voronoi">
    <Voronoi client:load />
  </div>
  <p><strong>Because everythingâ€™s <br />better with 
    <span class="animation-frame">
      <span class="animation-block">
        <span class="animation-item">friends </span>
        <span class="animation-item" aria-hidden="true">collaboration </span>
        <span class="animation-item" aria-hidden="true">realtime </span>
        <span class="animation-item" aria-hidden="true">AI chatbots </span>
        <span class="animation-item" aria-hidden="true">websockets </span>
        <span class="animation-item" aria-hidden="true">multiplayer </span>
        <span class="animation-item" aria-hidden="true">AI agents </span>
        <span class="animation-item" aria-hidden="true">edge computing </span>
        <span class="animation-item" aria-hidden="true">CRDTs </span>
        <span class="animation-item" aria-hidden="true">local-first apps </span>
        <span class="animation-item" aria-hidden="true">LLMs </span>
        <span class="animation-item" aria-hidden="true">friends </span>
      </span>
    </span>
  </strong></p>
</div>

<style lang="scss">
  @import "../../styles/shared.scss";

  #hero {
    grid-column: 1 / -1;
    margin: 0 -2rem -15vh;
    display: grid;
    grid-template-columns: 100%;
    grid-template-rows: 1fr;
    height: 100vh;
    padding-top: 0;
  }

  h1 {
    grid-column: 1 / -1;
    grid-row: 1 / 2;
    position: relative;
    z-index: 50;
    @include font-L();
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: stretch;
    justify-content: start;
    align-self: start;
    padding-top: calc(50px + 3.5rem);
    margin: 0 -2rem;
    strong {
      @include font-L-bold();
    }
    @media (min-width: 750px) {
      @include font-hero();
      strong {
        @include font-hero-bold();
      }
    }
  }
  
  #voronoi {
    grid-column: 1 / -1;
    grid-row: 1 / 3;
    mask-image: linear-gradient(to bottom, #000 50%, transparent 95%);
  }
  
 p {
    grid-column: 1 / -1;
    grid-row: 2 / 3;
    position: relative;
    z-index: 50;
    @include font-L();
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: stretch;
    justify-content: start;
    align-self: end;
    padding-bottom: calc(15vh + 3rem);
    strong {
      @include font-L-bold();
    }
    @media (min-width: 750px) {
      @include font-hero();
      strong {
        @include font-hero-bold();
      }
    }
  }
  
  @keyframes hero-loop {
    0% {
      transform: translateY(0);
    }
    7% {
      transform: translateY(0);
    }
    9% {
      transform: translateY(-2em);
    }
    16% {
      transform: translateY(-2em);
    }
    18% {
      transform: translateY(-4em);
    }
    25% {
      transform: translateY(-4em);
    }
    27% {
      transform: translateY(-6em);
    }
    34% {
      transform: translateY(-6em);
    }
    36% {
      transform: translateY(-8em);
    }
    43% {
      transform: translateY(-8em);
    }
    45% {
      transform: translateY(-10em);
    }
    52% {
      transform: translateY(-10em);
    }
    54% {
      transform: translateY(-12em);
    }
    61% {
      transform: translateY(-12em);
    }
    63% {
      transform: translateY(-14em);
    }
    70% {
      transform: translateY(-14em);
    }
    72% {
      transform: translateY(-16em);
    }
    79% {
      transform: translateY(-16em);
    }
    81% {
      transform: translateY(-18em);
    }
    88% {
      transform: translateY(-18em);
    }
    90% {
      transform: translateY(-20em);
    }
    98% {
      transform: translateY(-20em);
    }
    100% {
      transform: translateY(-22em);
    }
  }
  
  .animation-frame {
    position: relative;
    overflow: visible;
    &:before {
      content: "friends";
      color: transparent;
      user-select: none;
    }
    .animation-block {
      position: absolute;
      top: 0.125em;
      left: 0;
      margin: -0.25em 0;
      padding: 0.25em 0;
      height: 1.5em;
      overflow: hidden;
      mask-image: linear-gradient(to bottom, transparent 0, #000 0.25em, #000 calc(100% - 0.25em), transparent 100%);
      display: flex;
      flex-direction: column;
      gap: 0.9925em;
      .animation-item {
        transform: translateY(0);
        animation: hero-loop 20s ease-out 1s infinite;
   -moz-animation: hero-loop 20s ease-out 1s infinite;
-webkit-animation: hero-loop 20s ease-out 1s infinite;
     -o-animation: hero-loop 20s ease-out 1s infinite;
        display: block;
        width: 100%;
        text-align: left;
        white-space: nowrap;
      }
    }
  }


</style>
