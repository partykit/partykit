---
import "../styles/variables.scss";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html style="position: relative;">
  <head>
    <title>{title}</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body style="position: relative;">
    <slot />
  </body>
</html>

<style lang="scss" is:global>
  @import "../styles/shared.scss";

  * {
    @include reset();
  }

  html {
    color: var(--color-text);
    background: var(--color-page);
    background: linear-gradient(var(--color-feature-2) 50%, var(--color-page) 51%);
    @include font-core();
  }
  
  @media (max-width: 759px) {
    body.nav-open {
      overflow: hidden;
    }
  }

  h2 {
    @include font-XL();
    display: flex;
    flex-direction: column;
    align-items: stretch;
    text-align: center;
    margin: var(--whitespace) 0 calc(var(--whitespace) *0.5);
    strong {
      @include font-XL-bold();
    }
  }
  
  @media (min-width: 760px) {
    h2 {
      margin-bottom: var(--whitespace);
    }
  }

  h3 {
    @include font-L();
    display: flex;
    flex-direction: column;
    align-items: stretch;
    margin: 0 0 1rem;
    strong {
      @include font-L-bold();
    }
  }
  
  @media (min-width: 760px) {
    h3 {
      margin-top: 0;
    }
  }
  
  a {
    text-decoration-thickness: 1px;
    text-underline-offset: 0.1em;
    transition: color 1.5s ease;
    outline: none;
    &:hover,
    &:focus {
      transition: color 0.3s ease;
    }
    * {
      text-decoration-thickness: inherit;
      text-underline-offset: inherit;
      transition: inherit;
    }
  }
  
  .icon {
    display: inline-flex;
    flex-direction: column;
    align-content: center;
    justify-items: center;
    overflow: hidden;
    &:hover,
    &:focus {
      color: var(--color-feature-2);
    }
    * {
      transition: none;
    }
  }

  .icon span {
    position: absolute;
    top: -100%;
    left: -1000%;
  }

  body {
    display: flex;
    flex-direction: column;
    align-items: stretch;
  }

  main {
    display: flex;
    flex-direction: column;
    align-items: stretch;
    width: 100%;
    overflow: hidden;
    padding-bottom: calc(var(--whitespace) *0.5);
    background: var(--color-page);
  }

  section {
    padding: var(--padding);
  }
</style>
